{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:fpf-foundry:specs:skill:skill-spec.schema:0.1.0",
  "title": "SkillSpec v0.1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "name",
    "summary",
    "intent",
    "inputs",
    "outputs",
    "procedure",
    "constraints",
    "dependencies",
    "eval",
    "version",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*(?:\\/[a-z0-9]+(?:-[a-z0-9]+)*)*$"
    },
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "intent": {
      "$ref": "#/$defs/intent"
    },
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/input"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/output"
      }
    },
    "procedure": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/procedureStep"
      }
    },
    "constraints": {
      "$ref": "#/$defs/constraints"
    },
    "dependencies": {
      "$ref": "#/$defs/dependencies"
    },
    "eval": {
      "$ref": "#/$defs/eval"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "failure_modes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality": {
      "$ref": "#/$defs/quality"
    },
    "provenance": {
      "$ref": "#/$defs/provenance"
    }
  },
  "$defs": {
    "intent": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "goal",
        "non_goals"
      ],
      "properties": {
        "goal": {
          "type": "string"
        },
        "non_goals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type",
        "description",
        "required"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type",
        "description"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "procedureStep": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "step_id",
        "instruction"
      ],
      "properties": {
        "step_id": {
          "type": "string"
        },
        "instruction": {
          "type": "string"
        },
        "checks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "safety",
        "privacy",
        "licensing"
      ],
      "properties": {
        "safety": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "privacy": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "licensing": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tools",
        "skills"
      ],
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "eval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "acceptance_criteria",
        "tests"
      ],
      "properties": {
        "acceptance_criteria": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/test"
          }
        }
      }
    },
    "test": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "input_fixture",
        "expected"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "input_fixture": {
          "type": "object",
          "additionalProperties": true
        },
        "expected": {
          "type": "object",
          "additionalProperties": true
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tags",
        "authors",
        "created",
        "updated"
      ],
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "quality": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "precision_priority",
        "latency_priority",
        "cost_priority"
      ],
      "properties": {
        "precision_priority": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "latency_priority": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "cost_priority": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source_type": {
          "type": "string",
          "enum": [
            "article",
            "doc",
            "chat",
            "other"
          ]
        },
        "source_ref": {
          "type": "string"
        },
        "compiled_by": {
          "type": "string"
        },
        "compiled_at": {
          "type": "string",
          "format": "date-time"
        },
        "field_evidence": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/fieldEvidence"
          }
        }
      }
    },
    "fieldEvidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "json_path",
        "quote"
      ],
      "properties": {
        "json_path": {
          "type": "string"
        },
        "quote": {
          "type": "string"
        }
      }
    }
  }
}
